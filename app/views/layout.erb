<!DOCTYPE html>
<html>
  <head>
    <title>Makers_Bnb</title>
  </head>
  <body>
    <% if flash[:errors] && !flash[:errors].empty? %>
      <section id="header">
        <p>Please refer to the following errors below:</p>
        <ul id='errors'>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </section>
    <% end %>
    <%= yield %>
  </body>
</html>

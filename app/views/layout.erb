<!DOCTYPE html>
<html>
  <head>
    <title>Makers_Bnb</title>
  </head>
  <body>
    <% if flash[:errors] && !flash[:errors].empty? %>
      <section id="header">
        <p>Please refer to the following errors below:</p>
        <ul id='errors'>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </section>
    <% end %>

    <% if flash[:notice] %>
      <div id='notice'>
      <%= flash[:notice] %>
    <% end %>

    <% if current_user %>
      <p>Welcome, <%= current_user.first_name %>.</p>
    <% end %>


    <%= yield %>
  </body>
</html>
